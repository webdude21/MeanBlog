.container
    div.row
        div.col-md-3
            p.text-center Sort by:
            select.form-control(ng-model="order")
                option(value="title") Title
                option(value="author.username") Author
                option(value="category.title") Category Name
                option(value="date") Published date
        div.col-md-3
            p.text-center Order by:
            select.form-control(ng-model="orderType")
                option(value="false") Ascending
                option(value="true") Descending
        div.col-md-3
            p.text-center Filter by category:
            select(categories id="category" class="form-control" ng-model="selectedCategory" select="{{category.id}}")
        div.col-md-2.pull-right
            p.text-center Search:
            input.form(ng-model="search")
    hr
    article-view(ng-repeat="article in articles | filter: search | filter: selectedCategory | orderBy: order : orderType")