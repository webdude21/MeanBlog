.container.lighter
    .well
        form.form-horizontal(name="createArticleForm")
            fieldset
                legend Create New Article
                .form-group
                    label.col-md-2.control-label(for="title") Title
                    .col-md-10
                        input.form-control(type="text", placeholder="Title goes here", ng-model="article.title", required)
                .form-group
                    label.col-md-2.control-label(for="categories") Category
                    .col-md-10
                        select(categories id="category" class="form-control" required="required" ng-model="article.category")
                .form-group
                    label.col-md-2.control-label(for="body") Body
                    .col-md-10
                        div(text-angular ng-model="article.body" class="ng-isolate-scope ng-valid ta-bind ng-dirty")
                .form-group
                    label.col-md-2.control-label(for="meta-tags") Tags
                    .col-md-10
                        input.form-control(type="text", placeholder="Type your tags here", ng-model="article.tags", required)
                .pull-right
                    button.btn.btn-primary(ng-click="createNew(article)", ng-disabled="signUpForm.$invalid") Create
                    a.btn.btn-primary(href="#/") Cancel